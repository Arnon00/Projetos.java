package View;

import java.awt.BorderLayout;
import javax.swing.*;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;

	public class Janela_Modelo extends JFrame{

		
		DefaultTableModel modelo = new DefaultTableModel();
		JTable tabela = new JTable(modelo); 
		
		public void tabela(){
			
		}
		public Janela_Modelo(){
			
			super ("Mangas");
			String[] valores = {"ID","TITULO","AUTOR","NUMERO","ANO","EDITORA_ID","QTD_PAG","PREÇO_UNITARIO"};
			modelo = new DefaultTableModel(valores,0);
			tabela = new JTable (modelo);
			}
	
		public void init(){
			setSize(300, 200);
			setLocation(300, 200);
			
			JScrollPane lista = new JScrollPane(tabela, JScrollPane.VERTICAL_SCROLLBAR_ALWAYS,JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
			getContentPane().add(lista, BorderLayout.CENTER);
			setVisible(true);
			}
		}
